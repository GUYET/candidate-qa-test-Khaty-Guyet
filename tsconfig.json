{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2015",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": false
    },
    "include": [
        "src/**/*"
    ]
}